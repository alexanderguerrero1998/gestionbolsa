@model EstudianteViewModel

<style>
    .container{
        width:40%;
        max-width:570px; /* Ancho máximo del contenedor */
    }



    #cont2 {
        position: relative;
    
    }

    #cont1 {
        position: relative;
    
    }


    #font-imagen{
        background:#ECECEC;
        width:100%;
        height:100px;


    }

    #imagen{
        position: absolute;
        top: 70px; 
        left: 230px;
        z-index:auto;


    }

    #container-data{
        width:500px;
        margin:auto;
        padding-left:50px;
        padding-top:30px;


    }
    .icono{
        margin:auto;
    }

    .no-border {
      
        border-radius: 0 !important;
        padding: 0.375rem 0.75rem !important;
    }
    i{
        padding-bottom:10px;
    }

   
   
</style>

<body>
    <div class="container" style="padding-top: 3% !important" ;>
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h5 class="font-extra-bold text-info">SISTEMA INFORMÁTICO DE BOLSA DE EMPLEO (SICOA)</h5>
                    <br>
                    <p class="font-extra-bold">INFORMACION DEL ESTUDIANTE</p>
                    <p>
                        <span id="lblMenServicio">Este servicio es de uso exclusivo de los Estudiantes/Egresados de la Universidad Nacional de Chimborazo.</span>
                    </p>
                </div>

                <div class="hpanel ">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">

                               <div class="row" id="cont1">
                                    <div class="profile-picture " id="cont2">
                                        <div id="font-imagen"></div>
                                        <div id="imagen">
                                            <a href="#"><img src="https://i.pinimg.com/originals/2a/2e/8d/2a2e8d24f1f1ec6d8b0d1d3a8b0fc2e5.jpg" class="img-circle m-b" alt="Usuario sin autenticar" style="height: 76px; width: 76px;"></a>
                                        </div>
                                    </div>
                                </div>

                               <div class="row" id="container-data">
                                   <div class="col-md-12">
                                        <div class="row icono">
                                            <i class="fa fa-user "></i>  @Model.Nombres  @Model.ApellidoPaterno @Model.ApellidoMaterno
                                        </div>
                                        <div class="row icono">
                                           <i class="fa fa-envelope "></i> @Model.CorreoInstitucional
                                        </div>
                        
                                        <div class="row icono">
                                            <i class="fa fa-mortar-board"></i> @Model.Carrera | @Model.Nivel
                                        </div>
                     
                                        <div class="row icono">
                                           @Model.TelefonoCelular | C.I @Model.DocumentoIdentidad
                                        </div>
                                   </div>
                               </div>

                                <div class="row icono" style="margin-top:30px; margin-bottom:30px; width:370px;">
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Register" method="post">
                                        <input type="hidden" name="CI" value="@Model.DocumentoIdentidad" />
                                     
                                        <button type="submit" class="btn btn-primary btn-sm no-border" style="width:100%; ">Registrarse</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


