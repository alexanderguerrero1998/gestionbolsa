@model FormacionAcademicaViewModel

<form role="form" id="form" method="post" asp-action="FormacionAcademicaEdit" asp-controller="FormacionAcademica">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Logro" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IdEstudiante" />
        


                    @*En lista elementos de otra tabla*@
                    <div class="form-group col-lg-6">
                        <label asp-for="IdFormacionAcademica"></label>
                        <span asp-validation-for="IdFormacionAcademica" class="text-danger"></span>
                        <select asp-for="IdFormacionAcademica" asp-items="@(new SelectList(Model.tipoFormacionAcademica,"Id","Nombre"))" class="form-control select2">
                            <option value="Id">- Seleccionar una opción -</option>
                        </select>
                    </div>
                    @*Estos son los campos a edita*@

                    <div class="form-group col-lg-6">
                        <label asp-for="Empresa"></label>
                        <span asp-validation-for="Empresa" class="text-danger"></span>
                        <input asp-for="Empresa" type="text" class="form-control" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                        <textarea asp-for="Descripcion" class="form-control input-sm" rows="4" minlength="130" maxlength="200" placeholder="Describe en un minimo de 130 caracteres" required="required"></textarea>

                    </div>


                    <div class="form-group col-lg-6">
                        <label asp-for="FechaIncio"></label>
                        <span asp-validation-for="FechaIncio" class="text-danger"></span>
                        <input asp-for="FechaIncio" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="FechaFin"></label>
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                        <input asp-for="FechaFin" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Certificado"></label>
                        <span asp-validation-for="Certificado" class="text-danger"></span>
                        <input asp-for="Certificado" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>


               
          


                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>


