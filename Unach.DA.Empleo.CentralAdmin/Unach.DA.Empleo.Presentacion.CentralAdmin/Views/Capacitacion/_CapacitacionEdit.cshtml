@model CapacitacionViewModel2

<form role="form" id="form" method="post" asp-action="CapacitacionEdit" asp-controller="Capacitacion">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Capacitacion" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IdEstudiante" />
        


                    @*En lista elementos de otra tabla*@
                    <div class="form-group col-lg-6">
                        <label asp-for="IdCapacitacion"></label>
                        <span asp-validation-for="IdCapacitacion" class="text-danger"></span>
                        <select asp-for="IdCapacitacion" asp-items="@(new SelectList(Model.TiposCapacitacion,"Id","Nombre"))" class="form-control select2">
                            <option value="Id">- Seleccionar una opción -</option>
                        </select>
                    </div>
                    @*Estos son los campos a edita*@


                    <div class="form-group col-lg-6">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                        <input asp-for="Descripcion" type="text" class="form-control">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="FechaIncio"></label>
                        <span asp-validation-for="FechaIncio" class="text-danger"></span>
                        <input asp-for="FechaIncio" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="FechaFin"></label>
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                        <input asp-for="FechaFin" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Certificado"></label>
                        <span asp-validation-for="Certificado" class="text-danger"></span>
                        <input asp-for="Certificado" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha">
                    </div>


               
          


                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>


