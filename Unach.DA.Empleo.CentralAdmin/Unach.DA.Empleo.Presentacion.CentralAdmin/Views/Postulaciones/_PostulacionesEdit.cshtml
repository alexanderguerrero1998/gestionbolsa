@model PostulacionesViewModel

<form role="form" id="form" method="post" asp-action="PostulacionesEdit" asp-controller="Postulaciones">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Idioma" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                 

                   @* <div class="form-group ">
                        <label asp-for="Id"></label>
                        <span asp-validation-for="Id" class="text-danger"></span>
                        <select asp-for="IdiomaId" asp-items="@(new SelectList(Model.Idiomas,"Id","Nombre"))" class="form-control select2">
                            <option value="-1">- Seleccionar una opción -</option>
                        </select>
                    </div>*@

                    @*Estos son los campos a edita*@
                    <div class="form-group col-lg-4">
                        <label></label>
                        <div class="slidecontainer">
                            <input asp-for="IdVacante" type="range" min="1" max="100" value="@Model.IdVacante" class="sliderRange"   id="hablaInput">
                            <p>IdVacante: <span id="hablaValue"></span>%</p>
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        <label></label>
                        <div>
                            <input asp-for="IdEmpresa" type="range" min="1" max="100" value="@Model.IdEmpresa" class="sliderRange"  id="escribeInput">
                            <p>IdEmpresa: <span id="escribeValue"></span>%</p>
                        </div>
                    </div>

                    <div class="form-group col-lg-8">
                        <label asp-for="RolAudd"></label>
                        <span asp-validation-for="RolAudd" class="text-danger"></span>
                        <input asp-for="RolAudd" type="text" class="form-control  input-sm">
                    </div>



                    <div class="form-group col-lg-4">
                        <label asp-for="Fecha"></label>
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                        <input asp-for="Fecha"   type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha">
                    </div>

                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>



