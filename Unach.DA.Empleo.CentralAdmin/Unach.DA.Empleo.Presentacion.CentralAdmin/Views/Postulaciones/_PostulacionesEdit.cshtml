<script>
    var hablaInput = document.getElementById("hablaInput");
    var hablaValue = document.getElementById("hablaValue");
    hablaValue.innerHTML = hablaInput.value;

    hablaInput.oninput = function () {
        hablaValue.innerHTML = this.value;
    }



    var escribeInput = document.getElementById("escribeInput");
    var escribeValue = document.getElementById("escribeValue");
    escribeValue.innerHTML = escribeInput.value;

    escribeInput.oninput = function () {
        escribeValue.innerHTML = this.value;
    }


    var comprendeInput = document.getElementById("comprendeInput");
    var comprendeValue = document.getElementById("comprendeValue");
    comprendeValue.innerHTML = comprendeInput.value;

    comprendeInput.oninput = function () {
        comprendeValue.innerHTML = this.value;
    }


</script>