@model VacanteViewModel

<form role="form" id="form" method="post" asp-action="VacanteEdit" asp-controller="Vacante">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Vacante" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />


                    <div class="form-group col-lg-6">
                        <label asp-for="IdEmpresa"></label>
                                <span asp-validation-for="IdEmpresa" class="text-danger"></span>
                                <select asp-for="IdEmpresa" asp-items="@(new SelectList(Model.Empresas,"Id","Nombre"))" class="form-control select2">
                        <option value="Id">- Seleccionar una opción -</option>
                        </select>
                      </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="IdTipoVacante"></label>
                        <span asp-validation-for="IdTipoVacante" class="text-danger"></span>
                        <select asp-for="IdTipoVacante" asp-items="@(new SelectList(Model.Tiposvacante,"Id","Nombre"))" class="form-control select2">
                            <option value="-1">- Seleccionar una opción -</option>
                        </select>
                    </div>
                    @*Estos son los campos a edita*@
                    

                    <div class="form-group col-lg-6">
                        <label asp-for="Cargo"></label>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                        <input asp-for="Cargo" type="text" class="form-control  input-sm ">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                        <input asp-for="Descripcion" type="text" class="form-control  input-sm">
                    </div>


                    <div class="form-group col-lg-6">
                        <label asp-for="Plaza"></label>
                        <span asp-validation-for="Plaza" class="text-danger"></span>
                        <input asp-for="Plaza" type="text" class="form-control  input-sm">

                    </div>


                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>



