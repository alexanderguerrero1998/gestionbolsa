@model EstudianteIdiomaViewModel

<form role="form" id="form" method="post" asp-action="EstudianteIdiomaEdit" asp-controller="Idioma">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Logro" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IdEstudiante" />
        


                    @*En lista elementos de otra tabla*@
                    <div class="form-group col-lg-6">
                        <label asp-for="IdIdioma"></label>
                        <span asp-validation-for="IdIdioma" class="text-danger"></span>
                        <select asp-for="IdIdioma" asp-items="@(new SelectList(Model.tipoIdioma,"Id","Nombre"))" class="form-control select2">
                            <option value="Id">- Seleccionar una opción -</option>
                        </select>
                    </div>
                    @*Estos son los campos a edita*@


                    <div class="form-group col-lg-6">
                        <label asp-for="NivelSpeaking"></label>
                        <span asp-validation-for="NivelSpeaking" class="text-danger"></span>
                        <input asp-for="NivelSpeaking" type="number" class="form-control">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="NivelWriting"></label>
                        <span asp-validation-for="NivelWriting" class="text-danger"></span>
                        <input asp-for="NivelWriting" type="number"  class="form-control ">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="NivelListening"></label>
                        <span asp-validation-for="NivelListening" class="text-danger"></span>
                        <input asp-for="NivelListening" type="number" class="form-control ">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Certificado"></label>
                        <span asp-validation-for="Certificado" class="text-danger"></span>
                        <input asp-for="Certificado" type="text" class="form-control ">
                    </div>



                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>


