@model TransaccionViewModel

<form role="form" id="form" method="post" asp-action="TransaccionEdit" asp-controller="Administrador">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Transaccion" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">

                    <div class="form-group col-lg-6">
                        <label asp-for="IdModulo"></label>
                        <span asp-validation-for="IdModulo" class="text-danger"></span>
                        <select asp-for="IdModulo" asp-items="@(new SelectList(Model.ListaModulos,"Id","Nombre"))" class="form-control select2">
                            <option value="Id">- Seleccionar una opción -</option>
                        </select>
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="IdPadre"></label>
                        <span asp-validation-for="IdPadre" class="text-danger"></span>
                        <input asp-for="IdPadre" type="text" class="form-control  input-sm fecha" placeholder="Si es un menu hijo, poner valor (123..)">
                    </div>   

                    <div class="form-group col-lg-6">
                        <label asp-for="Titulo"></label>
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                        <input asp-for="Titulo" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                        <textarea asp-for="Descripcion" class="form-control input-sm" rows="4" minlength="5"  placeholder="Describe en un minimo de 130 caracteres" required="required"></textarea>
                    
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Controlador"></label>
                        <span asp-validation-for="Controlador" class="text-danger"></span>
                        <input asp-for="Controlador" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Accion"></label>
                        <span asp-validation-for="Accion" class="text-danger"></span>
                        <input asp-for="Accion" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Orden"></label>
                        <span asp-validation-for="Orden" class="text-danger"></span>
                        <input asp-for="Orden" type="number"  class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="IconClass"></label>
                        <span asp-validation-for="IconClass" class="text-danger"></span>
                        <input asp-for="IconClass" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                <div class="form-group col-lg-6">
                        <label asp-for="Visible"></label>
                        <span asp-validation-for="Visible" class="text-danger"></span>
                        <div class="form-check">
                            <input asp-for="Visible" class="form-check-input" type="checkbox" name="Visible">
                        </div>
                    </div>
    
                    <div class="form-group col-lg-6">
                        <label asp-for="Estado"></label>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                        <div class="form-check">
                            <input asp-for="Estado" class="form-check-input" type="checkbox" name="Estado">
                        </div>
                    </div>
           


             


                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>


