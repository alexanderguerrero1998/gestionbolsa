                                                                                @if (item.Certificado != null && item.Certificado.Trim().Length > 0)
                                                                                {
                                                                                    <li class="divider"></li>
                                                                                    <li><a asp-action="DownloadCapacitacion" asp-controller="Capacitacion" asp-route-id="@item.Id"><i class="fa fa-download text-success icon-space"></i>Descargar</a></li>
                                                                                }
                                                                            </ul>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="panel-footer">
                                                &nbsp;
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_Modal" model="@(new BootstrapModel { ID = "modal-action-codesi", AreaLabeledId = "modal-action-codesi-label", Size = ModalSize.Medium })" />
