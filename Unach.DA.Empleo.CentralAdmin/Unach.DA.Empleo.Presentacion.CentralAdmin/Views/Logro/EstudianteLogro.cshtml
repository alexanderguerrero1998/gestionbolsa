
@{
    ViewData["Title"] = "Logros";
}
@model List<LogroViewModel>

<partial name="_HeaderNombreVista" model="@(new HeaderViewModel() {Titulo= ViewData["Title"].ToString(), Subtitulo="Lista de capacitaciones disponibles para la gestión de servidores.", Icono="fa fa-book fa-5x text-info" })" />

