                                                                                        </tr>

                                                                                        <tr>
                                                                                            <td>
                                                                                                <strong>Descipcion:</strong>
                                                                                            </td>
                                                                                            <td>
                                                                                                @item.Descripcion

                                                                                            </td>
                                                                                        </tr>
                                                                                        <tr>
                                                                                            <td>
                                                                                                <strong>Certificado por:</strong>
                                                                                            </td>
                                                                                            <td>
                                                                                                @item.Institucion
                                                                                            </td>
                                                                                        </tr>
                                                                                        <tr>
                                                                                            <td>
                                                                                                <strong>Fecha de Inicio:</strong>
                                                                                            </td>
                                                                                            <td>
                                                                                                @item.FechaInicio
                                                                                            </td>
                                                                                        </tr>
                                                                                        <tr>
                                                                                            <td>
                                                                                                <strong>Fecha de finalización:</strong>
                                                                                            </td>
                                                                                            <td>
                                                                                                @item.FechaFin
                                                                                            </td>
                                                                                        </tr>

                                                                                    </tbody>
                                                                                </table>
                                                                            </div>

                                                                        </div>
                                                                    </td>
                                                                    <td>@item.TipoLogro</td>
                                                                    <td>@item.Descripcion</td>
                                                                    <td class="text-center" width="5%" valign="top">
                                                                        <div class="btn-group">
                                                                            <button data-toggle="dropdown" class="btn btn-clear btn-xs dropdown-toggle" aria-expanded="true"><span class="fa fa-ellipsis-h"></span></button>
                                                                            <ul class="dropdown-menu dropdown-menu-right">
                                                                                <li><a asp-action="LogroEdit" asp-controller="Logro" asp-route-id="@item.Id" asp-route-idEstudiante="@item.IdEstudiante" data-toggle="modal" data-target="#modal-action-codesi"><i class="fa fa-edit text-warning  icon-space"></i>Editar</a></li>
