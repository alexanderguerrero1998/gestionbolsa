        <script src="~/lib/jquery-validation/jquery.validate.unobtrusive.min.js"></script>

        <script src="~/lib/datepicker/datepicker.js"></script>
    </environment>

    <script src="~/js/modal-refresh.js" asp-append-version="true"></script>
    <script type="text/javascript">
        function format(d) {
            return '<div class="m-t-md ">' + d + '</div>';
        }

        $(function () {

            $("#modal-action-codesi-2").on('loaded.bs.modal', function (e) {
            }).on('hidden.bs.modal', function (e) {
                $(this).removeData('bs.modal');
            });

            var tabla = $('#internaTable').DataTable(
                {
                    language:
                    {
                        url: '/Configs/es-EC.json'
                    },
                    "order": [[4, 'asc']]
                }
            );

            // Array to track the ids of the details displayed rows
            var detailRows = [];
            $('#internaTable tbody').on('click', 'tr td.details-control', function () {
                var tr = $(this).closest('tr');
                var row = tabla.row(tr);
                var idx = $.inArray(tr.attr('id'), detailRows);

                if (row.child.isShown()) {
                    tr.removeClass('details');
                    row.child.hide();
                    tr.removeClass('shown');
                    // Remove from the 'open' array
                    detailRows.splice(idx, 1);
                }
                else {
                    tr.addClass('details');
                    var rd = row.data();
                    var additionalData = rd[0].replace('hidden="hidden"', "");
                    //row.child( format( row.data() ) ).show();
                    row.child(format(additionalData)).show();
                    tr.addClass('shown');
                    // Add to the 'open' array
                    if (idx === -1) {
                        detailRows.push(tr.attr('id'));
                    }
                }
            });
        });

