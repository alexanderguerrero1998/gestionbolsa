@model LogroViewModel

<form role="form" id="form" method="post" asp-action="LogroEdit" asp-controller="Logro">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Logro" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />


                    <div class="form-group col-lg-6">
                        <label asp-for="IdLogro"></label>
                        <span asp-validation-for="IdLogro" class="text-danger"></span>
                        <select asp-for="IdLogro" asp-items="@(new SelectList(Model.Logros,"Id","Nombre"))" class="form-control select2" >
                            <option value="Id">- Seleccionar una opción -</option>
                        </select>
                    </div>

                    @*Estos son los campos a edita*@


                    <div class="form-group col-lg-6">
                        <label asp-for="IdEstudiante"></label>
                        <span asp-validation-for="IdEstudiante" class="text-danger"></span>
                        <input asp-for="IdEstudiante" type="number" class="form-control  input-sm ">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                        <input asp-for="Descripcion" type="text" class="form-control  input-sm ">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Institucion"></label>
                        <span asp-validation-for="Institucion" class="text-danger"></span>
                        <input asp-for="Institucion" type="text" class="form-control  input-sm">
                    </div>


                    <div class="form-group col-lg-6">
                        <label asp-for="Certificado"></label>
                        <span asp-validation-for="Certificado" class="text-danger"></span>
                        <input asp-for="Certificado" type="text" class="form-control  input-sm">
                    </div>


                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>



