@model LogroViewModel

<form role="form" id="form" method="post" asp-action="LogroEdit" asp-controller="Logro">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Editar Logro" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IdEstudiante" />
        


                    @*En lista elementos de otra tabla*@
                    <div class="form-group col-lg-6">
                        <label asp-for="IdLogro"></label>
                        <span asp-validation-for="IdLogro" class="text-danger"></span>
                        <select asp-for="IdLogro" asp-items="@(new SelectList(Model.Logros,"Id","Nombre"))" class="form-control select2" required>
                            <option value="Id">- Seleccionar una opción -</option>
                        </select>
                    </div>
                    @*Estos son los campos a edita*@


                    <div class="form-group col-lg-6">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                        @*<input asp-for="Descripcion" type="text" class="form-control">*@
                        <textarea asp-for="Descripcion" class="form-control input-sm" rows="4" minlength="130" maxlength="200" placeholder="Describe en un minimo de 130 caracteres" required="required"></textarea>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Institucion"></label>
                        <span asp-validation-for="Institucion" class="text-danger"></span>
                        <input asp-for="Institucion" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="FechaInicio"></label>
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        <input asp-for="FechaInicio" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="FechaFin"></label>
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                        <input asp-for="FechaFin" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Certificado"></label>
                        <span asp-validation-for="Certificado" class="text-danger"></span>
                        <input asp-for="Certificado" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control  input-sm fecha" required="required">
                    </div>

                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Actualizar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>


