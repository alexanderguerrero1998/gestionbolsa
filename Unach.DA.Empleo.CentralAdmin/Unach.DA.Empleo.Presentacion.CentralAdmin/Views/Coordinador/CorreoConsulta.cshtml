@model NotificarCorreoViewModel



<form role="form" id="form" method="post" asp-action="CorreoConsulta" asp-controller="Coordinador">

    <partial name="_ModalHeader" model="@(new ModalHeader { Heading = "Notificar Mensaje" })" />

    @if (Model != null)
    {
        <div class="modal-body">
            <div>
                <div class="row">
      
                  
                    <div class="form-group col-lg-6">
                        <label asp-for="IdTipoCarrera"></label>
                        <span asp-validation-for="IdTipoCarrera" class="text-danger"></span>
                        <select asp-for="IdTipoCarrera" asp-items="@(new SelectList(Model.ListaCarreras,"IdCarrera","Nombre"))" class="form-control select2" required>
                            <option value="IdTipoCarrera">- Seleccionar una opción -</option>
                        </select>
                    </div>

                    <div class="form-group col-lg-12">
                        <label asp-for="Mensaje"></label>
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                        @*<input asp-for="Descripcion" type="text" class="form-control">*@
                        <textarea asp-for="Mensaje" class="form-control input-sm" rows="4" minlength="130" maxlength="200" placeholder="Describe en un minimo de 130 caracteres" required="required"></textarea>

                    </div>
                 



                </div>
            </div>
        </div>
    }
    else
    {
        <text>No existe información asociada.</text>
    }


    <partial name="_ModalFooter" model="@(new ModalFooter { SubmitButtonText = "Notificar", OnlyCancelButton = false, CancelButtonText = "Cancelar" })" />


</form>


