@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}
@*
<h2>@ViewData["Title"]</h2>
<p>
    Please check your email to reset your password.
</p>*@


<div class="login-container" style="padding-top: 10% !important; max-width: 600px;">

    <div class="row">

        <div class="col-lg-12">

            <div class="hpanel">
                <div class="panel-heading hbuilt">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        @* <a class="closebox"><i class="fa fa-times"></i></a>*@
                    </div>
                    Confirmación de contraseña olvidada
                </div>
                <div class="alert alert-warning">
                    <i class="fa fa-warning"></i> Revisar Correo
                </div>
                <div class="panel-body">
                    <p>
                        Porfavor revisa tu <strong>correo electronico</strong>
                        para restablecer la contraseña.
                        Puedes regresar al inicio de sesion [<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><u>Iniciar Sesión</u></a> ]
                    </p>
                </div>
                <div class="panel-footer">
                    Cierra esta ventana 
                </div>
            </div>
        </div>

    </div>
</div>
